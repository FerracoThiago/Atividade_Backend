generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/*
Relação entre livro e User: alugar N:N
Relação entre User e Home: 1:N
*/

model User{
  id String @id @default(cuid())
  nome String
  email String @unique
  senha String
  telefone Int?
  cpf String @unique

  produtos Produto[]
  pedidos Pedido[]
}

model Produto{
  id Int @id @default(autoincrement())
  preco Float
  categoria String
  data_publicacao Int
  descricao String?
  titulo String
  condicao String
  
  userId String
  user User @relation(fields: [userId], references: [id])

  pedidos Pedido[]
}

model Pedido{

  id String @id @default(cuid())
  quantidade Int 
  data Int
  valor Float
  forma_pagamento String
  status String


  userId String
  user User @relation(fields: [userId], references: [id])
  produtos Produto[]

}